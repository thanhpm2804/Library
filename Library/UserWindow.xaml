<Window x:Class="Library.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="UserWindow" Height="830" Width="680"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Grid>
        <Button Content="Borrow books" HorizontalAlignment="Left" Margin="30,10,0,0" 
            VerticalAlignment="Top" Height="30" Width="90" 
            Click="btnBorrow_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.771"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Borrow records" HorizontalAlignment="Left" Margin="140,10,0,0"
    VerticalAlignment="Top" Height="30" Width="90" 
    Click="btnBorrowRecords_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.553"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Reservation records" HorizontalAlignment="Left" Margin="250,10,0,0"
VerticalAlignment="Top" Height="30" Width="120" 
Click="btnReservationRecords_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.499"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Comments" HorizontalAlignment="Left" Margin="390,10,0,0"
VerticalAlignment="Top" Height="30" Width="80" 
Click="btnComments_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.65"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Log out" HorizontalAlignment="Left" Margin="530,10,0,0" 
VerticalAlignment="Top" Height="30" Width="50" 
Click="btnLogOut_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.65"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Close" HorizontalAlignment="Left" Margin="600,10,0,0" 
VerticalAlignment="Top" Height="30" Width="50" 
Click="btnClose_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="0.65"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Frame x:Name="frMain" NavigationUIVisibility="Visible" Margin="0,50,0,0"/>
    </Grid>
</Window>
